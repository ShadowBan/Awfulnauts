-if @owner
  #master-links
    %h3
      Master Links:
    %span
      Link to List: 
      %a{:href=>"/sk/list/#{@list_id}"}= "http://www.awfulnauts.com/sk/list/#{@list_id}"
      %br
      Admin Link to List: 
      %a{:href=>"/sk/list/#{@list_id}/#{@owner_id}"}= "http://www.awfulnauts.com/sk/list/#{@list_id}/#{@owner_id}"
      %br
      Roll List: 
      %a{:href=>"/sk/list/#{@list_id}/#{@owner_id}/roll"}= "http://www.awfulnauts.com/sk/list/#{@list_id}/#{@owner_id}/roll"

  %h3
    Add Raider:
  %form{:action=>"/sk/#{@list_id}/add-raider", :method=>"post"}
    Name: 
    %input{:type=>"text",:name=>"name"}
    %input{:type=>"submit", :value=>"Submit"}

%h3
  Current Raiders:
%table
  %tr
    %th
      Loot
    %th
      Name
    %th
      Roll
    -if @owner
      %th
        Remove
  -@list[:raiders].each do |r|
    %tr
      %td
        -if @owner
          %a{:href=>"/sk/#{@list_id}/get-loot/#{r[:name]}"}=r[:loot_count]
        -else
          =r[:loot_count]
      %td= r[:name] 
      %td= r[:roll]
      -if @owner
        %td
          %a{:href=>"/sk/#{@list_id}/remove-raider/#{r[:name]}"}
            Remove